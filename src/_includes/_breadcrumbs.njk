<nav id="breadcrumbs">
  <cluster-l role="list" justify="flex-start" space="var(--s-1)">
    <p>you are here: </p>
    <div role="listitem" id="breadcrumb-home"><a href="/">HOME</a></div>
    {%- for post in collections.all -%}
      {% if page.url == post.url %}
        <div role="listitem">
          <a href="{{ post.url }}" id="breadcrumb-current" aria-current="page">{{ post.data.title }}</a>
        </div>
      {% endif %}
    {%- endfor -%}
  </cluster-l>
</nav>
